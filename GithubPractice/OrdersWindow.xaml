<Window x:Class="GithubPractice.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GithubPractice"
        xmlns:viewmodel="clr-namespace:ViewModels;assembly=ViewModels"
        mc:Ignorable="d"
        Title="OrdersWindow" Height="450" Width="800">

    <!--<UserControl.DataContext>
        <viewmodel:OrdersViewModel/>
        </UserControl.DataContext>-->

            <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"></ColumnDefinition>
            <ColumnDefinition Width="80*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid ItemsSource="{Binding AllOrders}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order number" Binding="{Binding OrderId}" Width="100*"/>
            </DataGrid.Columns>
            </DataGrid>

    </Grid>
</Window>
